export config = ->
  import "trouble" as t
  import "helper"

  t.setup({
    mode: "loclist"
  })

  vim.keymap.set("n", "<Leader>oo", (-> t.toggle("document_diagnostics")), desc: "Document diagnostics")
  vim.keymap.set("n", "<Leader>oi", (-> t.toggle("lsp_implementations")), desc: "Implementations")
  vim.keymap.set("n", "<Leader>or", (-> t.toggle("lsp_references")), desc: "References")

  helper.registerPluginWk({
    prefix: "<leader>"
    map:
      o:
        name: "Trouble"
  })
